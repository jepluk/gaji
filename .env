# Konfigurasi Sistem Manajemen Gaji Karyawan

# Flask Secret Key (ganti dengan key yang kuat di production)
SECRET_KEY=gaji-karyawan-secret-key-2024-change-in-production

# Database path (default: instance/gaji_karyawan.db)
# DATABASE_PATH=instance/gaji_karyawan.db

# Upload folder for profile photos
# UPLOAD_FOLDER=uploads/profile_photos

# Debug mode (set False di production)
FLASK_DEBUG=True

# Server host and port
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
